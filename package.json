{
  "name": "@oxog/colorkit",
  "version": "1.0.0",
  "description": "Zero-dependency headless color picker and utilities with format conversion and accessibility",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./core": {
      "types": "./dist/core-entry.d.ts",
      "import": "./dist/core-entry.js",
      "require": "./dist/core-entry.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "workspaces": [
    "website"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit",
    "website:dev": "cd website && npm run dev",
    "website:build": "npm run build && cd website && npm run build"
  },
  "keywords": [
    "color",
    "colour",
    "picker",
    "hex",
    "rgb",
    "hsl",
    "hsv",
    "hwb",
    "cmyk",
    "palette",
    "contrast",
    "accessibility",
    "wcag",
    "a11y",
    "headless",
    "react"
  ],
  "author": "Ersin KOÃ‡",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ersinkoc/colorkit"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/react": "^18.3.0",
    "@vitest/coverage-v8": "^2.0.0",
    "react": "^18.3.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.2",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
